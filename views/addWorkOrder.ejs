<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); %>
    <link rel="stylesheet" href="css/addWorkOrder.css" type="text/CSS" />
    <script src="/js/addWorkOrder.js"></script>
  </head>

  <body>
    <header><%- include('./partials/header') %></header>
    <div class="addWorkOrderForm">
      <h2>ADD WORK ORDER</h2>
      <form class="addWorkOrder-form" id="addWorkOrderForm">
        <div class="form-group">
          <label for="Name">Name</label>
          <input
            name="Name"
            type="text"
            class="form-control"
            placeholder="Enter Name"
          />
        </div>
        <div class="form-group">
          <label for="presentAddress">Present Address</label>
          <input
            name="presentAddress"
            type="text"
            class="form-control"
            placeholder="Enter Present Address"
          />
        </div>
        <div class="form-group">
          <label for="workOrderAddress">Work Order Address</label>
          <input
            name="workOrderAddress"
            type="text"
            class="form-control"
            placeholder="Enter Work Order Address"
          />
        </div>
        <div class="form-group">
          <label for="phoneNo">Contact Number</label>
          <input
            name="phoneNo"
            type="text"
            class="form-control"
            placeholder="Enter Contact Number"
          />
        </div>
        <div class="form-group">
          <label for="advance">Advance Amount</label>
          <input
            name="advance"
            type="text"
            class="form-control"
            placeholder="Enter Advance Amount"
          />
        </div>
        <div class="form-group">
          <label for="workOrderDate">Work Order Date</label>
          <input
            name="workOrderDate"
            type="date"
            class="form-control"
            placeholder="Enter Work Order Date"
          />
        </div>
        <div class="addWorkOrderButton" id="profileFormSubmitBtn">
          <button type="button" name="resetEmail" class="btn btn-primary">
            <i class="fas fa-edit"></i> Submit
          </button>
        </div>
      </form>
    </div>
    <footer><%- include('./partials/footer') %></footer>
  </body>
</html>
