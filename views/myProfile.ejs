<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); %>
    <link rel="stylesheet" href="css/myProfile.css" type="text/CSS" />
    <script src="/js/myProfile.js"></script>
  </head>

  <body>
    <header><%- include('./partials/header') %></header>
    <div class="myProfileForm">
      <h2>My Profile</h2>
      <form class="myProfile-form" id="myProfileForm">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input
            disabled
            name="firstName"
            type="text"
            class="form-control"
            value="<%-profileData ? profileData.firstName : null%>"
          />
        </div>
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input
            disabled
            name="lastName"
            type="text"
            class="form-control"
            value="<%-profileData ? profileData.lastName : null%>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            disabled
            name="email"
            type="email"
            class="form-control"
            value="<%-profileData ? profileData.email : null%>"
          />
        </div>
        <div class="form-group">
          <label for="phoneNo"></label>Contact Number
          <input
            disabled
            name="phoneNo"
            type="text"
            class="form-control"
            value="<%-profileData ? profileData.phoneNo : null%>"
          />
        </div>
        <div class="editProfileButton" id="profileFormSubmitBtn">
          <button type="button" class="btn btn-primary" onclick="enableEdit()">Edit</button>
        </div>
      </form>
    </div>
    <footer><%- include('./partials/footer') %></footer>
  </body>
</html>
