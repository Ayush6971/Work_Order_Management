<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); %>
    <link rel="stylesheet" href="css/addUser.css" type="text/CSS" />
  </head>

  <body>
    <header><%- include('./partials/header') %></header>
    <div class="addUserForm">
      <h2>ADD USER</h2>
      <form class="addUser-form" method="POST" action="/addUser">
        <div class="form-group">
          <label for="email">First Name</label>
          <input
            name="firstName"
            type="text"
            class="form-control"
            id="email"
            placeholder="Enter First Name"
          />
        </div>
        <div class="form-group">
          <label for="email">Last Name</label>
          <input
            name="lastName"
            type="text"
            class="form-control"
            id="email"
            placeholder="Enter Last Name"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            name="email"
            type="email"
            class="form-control"
            id="email"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="email">Role</label>
          <select class="form-select" name="role">
            <option selected>Select Role</option>
           <%if(roles.length > 0){
             roles.forEach(function(role) {%>
              <option value="<%-role.roleID%>"><%=role.authority%></option>
              <%})}%>
            </select>
        </div>
        <div class="form-group">
          <label for="pwd"></label>Contact Number
          <input
            name="contactNo"
            type="text"
            class="form-control"
            id="pwd"
            placeholder="Enter Contact Number"
          />
        </div>
        <div class="addUserButton">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
    <footer><%- include('./partials/footer') %></footer>
  </body>
</html>
